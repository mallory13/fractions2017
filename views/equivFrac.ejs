    </section>

    <section class="row table-responsive">
      <table class="table table-bordered table-striped tbl-ul-pad tbl-medium-font"  id="ftable">
        <!-- First Row - Time Stamp and Learning Goal -->
        <tr>
          <td>
            <p>MO 15 min</p>
            <p>A 25 min</p>
